/* manifest.json */
{
  "name": "M4A Transcriber",
  "start_url": "/",
  "display": "standalone",
  "icons": [ /* … */ ],

  "share_target": {
    "action": "/receive/",
    "method": "POST",           // binary → POST
    "enctype": "multipart/form-data",
    "params": {
      "files": [{
        "name": "audio",        // the field name your SW will read
        "accept": ["audio/m4a", "audio/mp4", "audio/*"]
      }]
    }
  }
}
